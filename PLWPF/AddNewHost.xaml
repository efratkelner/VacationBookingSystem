<Window x:Class="PLWPF.AddNewHost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="AddNewHost" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="temps/unnamed.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtPrivate" HorizontalAlignment="Left" Height="29" Margin="173,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
        <TextBox Name="txtFamily" HorizontalAlignment="Left" Height="29" Margin="173,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
        <TextBox Name="txtPhone" HorizontalAlignment="Left" Height="30" Margin="173,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
        <Label Content="שם פרטי" HorizontalAlignment="Left" Height="30" Margin="340,99,0,0" VerticalAlignment="Top" Width="116" Grid.Column="1"/>
        <Label Content="שם משפחה" HorizontalAlignment="Left" Height="34" Margin="340,136,0,0" VerticalAlignment="Top" Width="116" Grid.Column="1"/>
        <Label Content="מספר טלפון" HorizontalAlignment="Left" Height="38" Margin="340,187,0,0" VerticalAlignment="Top" Width="116" Grid.Column="1" RenderTransformOrigin="0.827,0.682"/>
        <Label Content="מייל" HorizontalAlignment="Left" Height="30" Margin="358,248,0,0" VerticalAlignment="Top" Width="76" Grid.Column="1"/>
        <TextBox x:Name="txtMail"  HorizontalAlignment="Left" Height="30" Margin="173,248,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
        <Label Content="סיסמא" Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="373,306,0,0" VerticalAlignment="Top" Width="106"/>
        <TextBox Grid.Column="1" Name="txtPassword" HorizontalAlignment="Left" Height="29" Margin="173,306,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154"/>
        <Button Name="btnUpdate" Content="עדכן" HorizontalAlignment="Left" Height="49" Margin="65,360,0,0" VerticalAlignment="Top" Width="173" Click="btnUpdate_Click_1" FontWeight="Bold"/>
        <Button Name="btnBankBranch" Content="שינוי פרטי בנק:" HorizontalAlignment="Left" Height="26" Margin="65,71,0,0" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.585,1.741" Click="btnBankBranch_Click" FontWeight="Bold"/>
        <Label Content="מספר חשבון בנק" Grid.Column="1" HorizontalAlignment="Left" Height="38" Margin="340,360,0,0" VerticalAlignment="Top" Width="131"/>
        <TextBox Grid.Column="1" Name="txtBankNum" HorizontalAlignment="Left" Height="29" Margin="173,360,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154"/>
        <Label Name="lblN" Content="מספר בנק" HorizontalAlignment="Left" Height="30" Margin="204,119,0,0" VerticalAlignment="Top" Width="67"/>
        <Label Name="lblNA" Content="שם בנק" HorizontalAlignment="Left" Height="31" Margin="204,154,0,0" VerticalAlignment="Top" Width="67"/>
        <Label Name="lblNB" Content="מספר סניף" HorizontalAlignment="Left" Height="26" Margin="204,212,0,0" VerticalAlignment="Top" Width="67" RenderTransformOrigin="0.583,-1.797"/>
        <Label Name="lblNAD" Content="כתובת" HorizontalAlignment="Left" Height="40" Margin="204,315,0,0" VerticalAlignment="Top" Width="67"/>
        <Label Name="lblNC" Content="עיר" HorizontalAlignment="Left" Height="36" Margin="204,262,0,0" VerticalAlignment="Top" Width="67"/>
        <TextBox Name="txtNum" HorizontalAlignment="Left" Height="30" Margin="53,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="106" TextChanged="txtNum_TextChanged"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="36" Margin="53,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="106"/>
        <TextBox Name="txtNumB" HorizontalAlignment="Left" Height="21" Margin="53,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="106"/>
        <TextBox Name="txtCity" HorizontalAlignment="Left" Height="35" Margin="53,263,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="106"/>
        <TextBox Name="txtAdress" HorizontalAlignment="Left" Height="26" Margin="53,315,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="106"/>
        <Label Content="הכנס פרטים:" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="173,10,0,0" VerticalAlignment="Top" Width="306" Foreground="#FF091E7C" FontWeight="Bold" FontSize="16"/>
        <ComboBox Name="cmbBankThread" HorizontalAlignment="Left" Height="25" Margin="48,29,0,0" VerticalAlignment="Top" Width="185" SelectionChanged="CmbBankThread_SelectionChanged"/>
        <TextBox Name="txbId" Grid.Column="1" HorizontalAlignment="Left" Height="29" Margin="173,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" TextChanged="TxbId_TextChanged"/>
        <Label Content="מספר זהות" Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="340,62,0,0" VerticalAlignment="Top" Width="76"/>


    </Grid>
</Window>