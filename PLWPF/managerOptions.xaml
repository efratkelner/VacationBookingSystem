    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="temps/unnamed.png"/>
        </Grid.Background>
        <Label Content="בס&quot;ד" HorizontalAlignment="Left" Height="30" Margin="737,10,0,0" VerticalAlignment="Top" Width="45"/>
        <Label Content="שינוי העמלה" HorizontalAlignment="Left" Height="38" Margin="621,69,0,0" VerticalAlignment="Top" Width="144" FontWeight="Bold"/>
        <Button Content="שינוי" HorizontalAlignment="Left" Height="25" Margin="621,183,0,0" VerticalAlignment="Top" Width="89" Click="Button_Click" Background="#FF4616EC" Foreground="#FF0A0202" FontWeight="Bold"/>
        <Label Content="עמלה נוכחית" HorizontalAlignment="Left" Height="25" Margin="682,112,0,0" VerticalAlignment="Top" Width="83" RenderTransformOrigin="1.653,0.551"/>
