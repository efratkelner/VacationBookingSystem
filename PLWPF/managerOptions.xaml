        <Button x:Name="btnHosts" Content="מארחים" HorizontalAlignment="Left" Height="55" Margin="63,87,0,0" VerticalAlignment="Top" Width="203" Click="btnHosts_Click" Foreground="#FF3115E2" FontWeight="Bold" FontSize="14"/>
